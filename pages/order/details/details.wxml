<!--pages/order/details/details.wxml-->
<view>
  <view class='order-info'>
    <view class='goods-img'>  
        <image src="{{order.thumb}}"></image>
      </view>
    <view class='goods-info'>
      <view class='goods-name'>
      {{order.goods_name}}
      </view>
      <view class='goods-price'>
        <view class='price'>￥{{order.shop_price}}/个</view>
      </view>
    </view>
  </view>
  <view class='order-total'>
    <view>实付款</view>
    <view><text>￥{{order.total_money}}</text></view>
  </view>
  <view class='order-code' wx:if="{{order.order_status_type==1 || order.order_status_type==2}}">
    <view  class='tit'>
      体验验证码
    </view>
    <view class='code'>
    {{order.code}}
    </view>
  </view>
  <view class='order-date'>
    <view class='date'>
      <view class='tit'>
      游玩日期
      </view>
      <view class='num'>
      12等10天
      </view>
    </view>
  </view>
  <view class='order-num'>
      <view>
      同行人数
      </view>
      <view class='add-num'>
        {{order.goods_num}}人
      </view>
  </view>
  <view class='user-info'>
      <view class='tit'>
      姓名
      </view>
      <view>
        {{order.shr_name}}
      </view>
  </view>
  <view class='user-info'>
      <view  class='tit'>
      手机号
      </view>
      <view>
         {{order.phone}}
      </view>
  </view>
  <view class='user-info'>
      <view  class='tit'>
      身份证号
      </view>
      <view>
        {{order.idcard}}
      </view>
  </view>
  <view class='order-pay'>
    <view><text class='text-name'>订单状态：{{order.order_status}}</text></view>
    <view><text class='text-address'>订单编号：{{order.order_sn}}</text></view>
    <view><text class='text-address'>创建时间：{{order.submit_time}}</text></view>
  </view>
</view>
<view class='footer' wx:if='{{order.order_status_type == 0}}'>
    <view bindtap='cancel' data-id='{{order.id}}' class='order-btn'>取消体验</view>
    <view bindtap='getOrder' data-id='{{order.id}}' class='order-btn btn-warn'>立即付款</view>
</view>
<view class='footer' wx:if='{{order.order_status_type == 1 && order.comment_type==2}}'>
  <view bindtap='comment' data-id='{{order.id}}' class='order-btn'>评论</view>
</view>
