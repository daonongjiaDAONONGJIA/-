/* pages/order/details/details.wxss */
page{
  padding-bottom:140rpx;
  font-size: 30rpx;
}
.order-pay{
  display: flex;
  flex-direction: column;
  justify-content: center;
  line-height: 40rpx;
  padding: 30rpx;
  margin-top:20rpx;
  background: #fff;
}
.order-pay view{
  height: 60rpx;
  line-height: 60rpx;
}
.order-total{
  margin-bottom: 20rpx;
  padding: 0 30rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  background: #fff;
}
.order-total text{
  color: #f65c5e
}
.order-info{
  padding:30rpx;
  display: flex;
  align-items: center;
  background: #fff;
  font-size:30rpx;
  border-bottom:1px solid #f7f7f7
}
.goods-name{
  padding-bottom: 12rpx;
}
.goods-img{
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
}
.goods-img image{
  width: 160rpx;
  height: 160rpx;
}
.goods-price{
  flex-shrink: 0;
}
goods-price .price{
  padding-bottom: 12rpx;
}
.goods-buy-info,.goods-price .price{
  color: #f65c5e
}
.order-date{
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  border-bottom:1px solid #f7f7f7
}
.order-date .date{
  display: flex;
}
.order-date .date .tit{
  padding-right: 20rpx;
}
.order-num{
  padding: 30rpx;
  display: flex;
  align-items: center;
  background: #fff;
  border-bottom:1px solid #f7f7f7
}
.order-num .add-num{
  padding-left:20rpx;
}
.order-num .add-num .add-btn,.order-num .add-num .add-num1{
  width: 80rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
}
.order-num .add-num .add-btn{
  font-size:40rpx;
}
.order-num .add-num .add-btn.add{
  background: #f65c5e;
  color: #fff;
}
.order-num .add-num .add-btn.reduce{
  background: #f7f7f7;
  color: #ccd1d5
}
.user-info{
  display: flex;
  align-items: center;
  padding: 30rpx;
  border:1px solid #f7f7f7;
  background: #fff;
}
.user-info .tit{
  width: 130rpx;
}

.order-code{
  margin-bottom: 30rpx;
  padding:30rpx;
  background: #fff;
}
.order-code .code{
  padding-top: 20rpx;
  font-size:50rpx;
  color: #f65c5e;
  text-align: center;
}


.footer{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 20rpx 30rpx;
  position: fixed;
  bottom:0;
  left: 0;
  width: 100%;
  background: #fff;
  border-top:1px solid #f7f7f7;
  box-sizing: border-box
}
.footer .order-btn{
  margin-left:30rpx;
  height: 60rpx;
  padding: 0 30rpx;
  border-radius: 30rpx;
  text-align: center;
  line-height: 60rpx;
  border:1px solid #666;
  font-size: 30rpx;
}
.footer .order-btn.btn-warn{
  border:1px solid #f65c5e;
  background: #f65c5e;
  color:#fff;
}