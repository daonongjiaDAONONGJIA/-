<!--pages/order/list/list.wxml-->
<view class='class-tab'>
  <text bindtap='tabClick' data-index='0' class='{{tabClasss[0]}}'>全部体验</text>
  <text bindtap='tabClick' data-index='1' class='{{tabClasss[1]}}'>未付款</text>
  <text bindtap='tabClick' data-index='2' class='{{tabClasss[2]}}'>已完成</text>
  <text bindtap='tabClick' data-index='3' class='{{tabClasss[3]}}'>待使用</text>
  <text bindtap='tabClick' data-index='4' class='{{tabClasss[4]}}'>已取消</text>
</view>
<view class='order-item' wx:for='{{orders}}' wx:key='{{item.id}}'>
  <!-- 订单号 -->
  <view class='view-title'>
    <view>
      <text>体验号：{{item.order_sn}}</text>
    </view>
    <view class='order-status' wx:if='{{item.order_status == 0}}'>
     待付款
    </view>
    <view class='order-status' wx:if='{{item.order_status == 1}}'>
     已完成
    </view>
    <view class='order-status' wx:if='{{item.order_status == 2}}'>
     待使用
    </view>
    <view class='order-status' wx:if='{{item.order_status == 3}}'>
     已取消
    </view>
  </view>
  <!-- 商品图片和标题 -->
  <view class='carts-item' bindtap='details' data-id='{{item.id}}'>
    <view class='carts-image'>
      <image  src=' {{item.thumb}}' mode='aspectFill'></image>
    </view>
    <view class='carts-text'>
      <view class='carts-title'>{{item.goods_name}}</view>
      <!-- <view class='carts-bz'>订单备注：暂无~</view> -->
      <view class='carts-price'>￥{{item.shop_price}}</view>
    </view>
  </view>
  <!-- 总金额 -->
  <view class='order-footer'>
    <text>合计：</text>
    <text style='color:#FF6666'>￥{{item.total_money}}元</text>
  </view>
  <!-- 根据不同状态显示相应操作按钮 -->
  <view class='order-btn' wx:if='{{item.order_status == 0}}'>
    <text bindtap='cancel' data-id='{{item.id}}' class='btn-cancel'>取消体验</text>
    <text bindtap='getOrder' data-id='{{item.id}}' class='btn-pay'>立即付款</text>
  </view>
  <view wx:elif='{{item.order_status == 1}}' class='order-footer'>
    <text bindtap='details' data-id='{{item.id}}' class='btn-cancel'>查看体验</text>
    <text bindtap='comment' data-id='{{item.id}}' wx:if="{{item.order_status == 1 && item.comment_type==2}}" class='btn-pay'>评论</text>
  </view>
  <view wx:elif='{{item.order_status == 2}}' class='order-footer'>
    <text bindtap='details' data-id='{{item.id}}' class='btn-cancel'>查看体验</text>
  </view>
  <view wx:elif='{{item.order_status == 3}}' class='order-footer'>
    <text bindtap='details' data-id='{{item.id}}' class='btn-cancel'>查看体验</text>
    <text bindtap='delete' data-id='{{item.id}}' class='btn-pay'>删除体验</text>
  </view>
  <view wx:else class='order-footer'>
    <text class='btn-cancel'>已取消体验</text>
  </view>

</view>
