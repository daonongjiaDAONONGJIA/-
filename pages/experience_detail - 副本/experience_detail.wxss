.swiper-box{
  position: relative;
  width: 100%;
  background: #000
}
.swiper-item{
  position: relative;
}
.swiper-item .img-bg{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom,rgba(0,0,0,0),rgba(0,0,0,0.5));
}
.slide-image{
  width: 100%;
  height: auto;
}
