/* pages/reward/index.wxss */
.reward{
  background: #fff;
}
.reward .tit{
  border-bottom:1px solid #eee;
  padding: 0 30rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 38rpx;
}
.reward-list{
  padding: 30rpx;
  display: flex;
  justify-content: space-between
}
.reward-item{
  width: 23%;
  border:1px solid #eee;
  text-align: center;
  font-size: 28rpx;
  height: 90rpx;
  line-height: 90rpx;
}
.reward-item.active{
  background: #f93a3c;
  color: #fff;
  border-color: #f93a3c;
}
.reward-item input{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border:none;
  background: none;
}
.reward-btn{
  padding:0 30rpx 30rpx 30rpx;
 
}
.reward-btn .btn{
  width:100%;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  text-align: center;
  background: #f93a3c;
}