/* pages/experience/experience.wxss */
page{
  background: #fff;
  box-sizing: border-box;
}
.search
{
  border-top:1px solid #ededed;
  border-bottom:1px solid #ededed;
  position: relative;
  width:100%;
  background: #fff;
  padding:24rpx 30rpx;
  box-sizing: border-box;
}

/* 搜索框提示文字样式 */
.search input
{
  padding: 0 30rpx;
  width: 100%;
  height: 80rpx;
  background: #eeeeee;
  border-radius: 40rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 搜索框小图标 */
.search image
{ 
  position: absolute;
  right: 30rpx;
  top: 40rpx;
  width:40rpx;
  height:40rpx;
  padding-right:20rpx;
  z-index:100;
}
.exper-item{
  padding: 30rpx;
  display: flex;
  background: #fff;
  border-bottom: 1px solid #dedede
}
.exper-img{
  margin-right: 20rpx;
  width: 200rpx;
  flex-shrink: 0;
}
.exper-img image{
  width: 100%;
  border-radius: 10px;
}
.exper-info{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
}
.exper-tit{
  font-size:32rpx;
  margin-bottom: 6rpx;
}
.exper-sub-tit{
  height: 78rpx;
  overflow: hidden;
  font-size: 28rpx;
   color: #666666;
}
.exper-yh text{
  display: inline-block;
  padding: 4rpx;
  font-size: 24rpx;
  color:#f93a3c;
  border:1px solid #f93a3c;
  border-radius: 5px;
}
.exper-price{
  margin-top:8rpx;
  display: flex;
  font-size: 28rpx;
}
.exper-price .price{
  margin-right: 20rpx;
  color:#f93a3c;
}
.exper-price .roll-price{
  display: flex;
  align-items: center;
}
.exper-price image{
  margin-left: 10rpx;
  width: 36rpx;
  height: 36rpx;
}
.exper-tabs{
  margin-bottom: 30rpx;
}
.exper-tabs .tag-item{
  margin-right: 16rpx;
  background: #f8f8f8;
  padding: 8rpx 12rpx;
  font-size: 24rpx;
  color: #000;
}
.exper-tabs .tag-item:nth-of-type(1){
  color:#fb9c02;
  background: #fff3d3;
}
.exper-tabs .tag-item:nth-of-type(2){
  color:#685ee1;
  background: #f1effd;
}