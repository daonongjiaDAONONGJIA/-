/* pages/experience_detail1/index.wxss */
.swiper-box{
  position: relative;
  width: 100%;
  overflow: hidden
}
.slide-image{
  width: 100%;
  height: auto;
}
.tui-title{
  font-size: 15px;
}
swiper-item{
  position: relative
}
.swiper-info{
  padding: 0 50rpx;
  position: absolute;
  bottom: 100rpx;
  left: 0;
  width:100%;
  color: #fff;
  font-weight: bolder
}
.goods-info,.goods-comment{
  margin-top:20rpx;
  background: #fff;
  padding: 30rpx;
}
.goods-info{
  margin-top:0
}
.goods-info .goods-name{
  font-size:40rpx;
  margin-bottom: 10rpx;
}
.goods-desc{
   margin-top:20rpx;
   background: #fff;
}
.goods-desc .desc{
  font-size:28rpx;
  line-height: 2;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.goods-desc .desc .wxParse-p{
   text-align: center
}
.goods-desc .desc image{
  width: 100%;
}
.goods-type{
  padding: 0 30rpx;
}
.goods-price{
  margin-top: 12rpx;
  color: #f93a3c;
  font-weight: bold;
}
.goods-price text{
  margin-left: 10rpx;
  color: #ccc;
  text-decoration: line-through;
  font-weight: normal;
  font-size:30rpx;
}
.roll-price{
  margin-top: 12rpx;
  font-size:30rpx;
}
.roll-price text{
  padding-left: 10rpx;
  color: #f93a3c;
  font-weight: bold;
}
.goods-discount{
  padding: 34rpx;
  background: #fff;
  margin-top: 12rpx;
  font-size: 28rpx;
}
.goods-discount .discount-item{
  margin-bottom: 34rpx;
  width: 100%;
  display: flex;
  justify-content: space-between
}
.goods-discount .discount-item:last-of-type{
  margin-bottom: 0;
}
.goods-discount .goods-integral{
  display: flex;
  font-size: 28rpx;
}
.goods-discount .goods-integral .tit{
  flex-shrink: 0;
  color: #999;
  margin-right: 30rpx;
}
.goods-discount .operate{
  display: flex;
  align-items: center;
  color: #999
}
.goods-discount .operate image{
  margin-left: 10rpx;
  width: 40rpx;
  height: 40rpx;
}
.goods-discount .goods-integral .mark{
  flex-shrink: 0;
  height: 36rpx;
  line-height: 36rpx;
  display: inline-block;
  border:1px solid #f93a3c;
  color: #f93a3c;
  border-radius: 6rpx;
  margin-right: 20rpx;
  font-size: 24rpx;
}
.goods-comment{
   margin-bottom:160rpx;
}
.goods-comment .comment-none{
  padding: 30rpx;
  text-align: center;
  font-size: 30rpx;
}
.goods-comment .comment-item{
  padding: 20rpx 0;
  display: flex;
}
.goods-comment .comment-avatar{
  flex-shrink: 0;
  width: 80rpx;
  height: 80rpx;
  margin-right: 30rpx;
  border-radius: 50%;
  overflow: hidden;
  background: #ccc
}
.goods-comment .comment-avatar image{
  width: 66rpx;
  height: 66rpx;
}
.goods-comment .comment-info{
  width: 100%;
}
.goods-comment .comment-user{
  padding-bottom: 10rpx;
  font-size: 36rpx;
  color: #1a1a1a
}
.goods-comment .comment-desc{
  padding-bottom: 30rpx;
  font-size: 28rpx;
  border-bottom:1px solid #f7f7f7;
  color: #4e4e4e
}
.footer{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  position: fixed;
  bottom:0;
  left: 0;
  width: 100%;
  background: #fff;
  border-top:1px solid #f7f7f7;
  box-sizing: border-box
}
.goods-buy{
  padding:8rpx 34rpx;
  font-size:30rpx;
  background:#f93a3c;
  color:#fff;
  border-radius:30rpx;

}
.goods-intro{
  margin-top:20rpx;
  background: #fff;
  padding: 30rpx;
}
.goods-intro .intro-item .intro-tit{
  font-size: 36rpx;
  margin-bottom: 30rpx;
}
.goods-intro .intro-item .intro-con{
  padding-left: 42rpx;
  position: relative;
  font-size: 28rpx;
  line-height: 1.8;
  margin-bottom: 30rpx;
}
.goods-intro .intro-item .intro-con::before{
  content:'';
  position: absolute;
  left: 14rpx;
  top: 0;
  width: 6rpx;
  height: 100%;
  background: #eee;
}
.goods-intro .intro-item .intro-con .intro-imgs{
  flex-wrap: wrap;
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}
.goods-intro .intro-item .intro-con .intro-imgs .img-item{
  flex-shrink: 0;
  width: 49%;
  height: 260rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}
.goods-intro .intro-item .intro-con .intro-imgs .img-item image{
  width: 100%;
}
.style{
  margin-top: 20rpx;
  width: 100%;
  padding:30rpx;
  box-sizing: border-box;
  background: #fff;
}
.style .style-btn{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #f65c5c;
  color: #fff;
  border-radius: 10rpx;
  font-size: 30rpx;
}