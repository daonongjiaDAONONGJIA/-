/* pages/score_shop/index.wxss */
page{
  background: #fff;
}
.score{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 30rpx 60rpx 30rpx;
  font-size: 24rpx;
  background: #333;
  color: #fff
}
.score .num{
  font-size: 32rpx;
}
.goods-list{
  margin-top:-30rpx;
  border-radius: 30rpx 30rpx 0 0;
  padding: 30rpx;
  background: #fff;
}
.goods-item{
  margin-bottom: 30rpx;
  display: flex;
  font-size: 24rpx;
}
.goods-item .img{
  flex-shrink: 0;
  margin-right: 30rpx;
  width: 120rpx;
  height: 120rpx;
  background: #000;
  overflow: hidden
}
.goods-item .img image{
   width: 120rpx;
  height: 120rpx;
}
.goods-item .info{
  width: 100%;
}
.goods-item .info .con{
  display: flex;
  justify-content: space-between
}
.goods-item .info .name{
  margin-bottom: 10rpx;
  color: #3a3a3a
}
.goods-item .info .num{
  color: #dd5957;
  font-size: 32rpx;
}
.goods-item .info .btn{
  width:100rpx;
  height: 42rpx;
  line-height: 42rpx;
  text-align: center;
  background: #dd5957;
  color: #fff;
  border-radius: 30rpx;
}