/* pages/experience_index/experience_index.wxss */
page{
  background: #eee;
}
.search
{
  border-top:1px solid #ededed;
  position: relative;
  width:100%;
  background: #fff;
  padding:24rpx 30rpx;
  box-sizing: border-box;
}

/* 搜索框提示文字样式 */
.search input
{
  padding: 0 30rpx;
  width: 100%;
  height: 80rpx;
  background: #eeeeee;
  border-radius: 40rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 搜索框小图标 */
.search image
{ 
  position: absolute;
  right: 30rpx;
  top: 40rpx;
  width:40rpx;
  height:40rpx;
  padding-right:20rpx;
  z-index:100;
}
.swiper-box{
  box-sizing: border-box;
  position: relative;
  width: 100%;
  overflow: hidden
}
.slide-image{
  width: 100%;
  height: auto;
  /*border-radius: 20rpx;*/
}
.tui-title{
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  color: #000;
}
.tui-title image{
  width: 44rpx;
  height: 30rpx;
}
swiper-item{
  position: relative
}
.swiper-info{
  padding: 0 50rpx;
  position: absolute;
  bottom: 100rpx;
  left: 0;
  width:100%;
  color: #fff;
  font-weight: bolder
}
.dots{ 
  position: absolute; 
  left: 0; 
  right: 0; 
  bottom: 20rpx; 
  width: 100%;
  padding: 0 50rpx;
  box-sizing: border-box;
  display: flex; 
  justify-content: center; 
} 
.dots .dot{ 
  flex:1 0;
  margin: 0 8rpx;  
  height: 6rpx; 
  background:rgba(255, 255, 255, 0.6); 
  border-radius: 6rpx; 
  transition: all .6s; 
} 
.dots .dot.active{ 
  background:rgba(255, 255, 255, 1);
}


.index-section{
  padding:30rpx;
  background: #fff;
  margin-bottom: 15rpx;
}

.index-section .title{
  display: flex;
  justify-content: space-between;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 34rpx;
  font-weight: bold;
  padding: 0 30rpx;
  box-sizing: border-box
}

.destination,.goods-commend {
  box-sizing: border-box;
  width: 100%;
  white-space: nowrap;
}
.destination-item{
  position: relative;
  margin: 30rpx 20rpx 0 0;
  width: 210rpx;
  height: 210rpx;
  display: inline-block;
  overflow: hidden;
  border-radius: 18rpx;
}
.destination-item image{
  width: 100%;
  height: 100%;
}
.destination-name{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  background: rgba(0, 0, 0, 0.4)
}

.commend-item{
  margin: 30rpx 20rpx 30rpx 0;
  width: 280rpx;
  display: inline-block;
}
.commend-banner{
  width: 100%;
}
.commend-banner image{
  width: 100%
}
.commend-img{
  width: 280rpx;
  height: 190rpx;
  border-radius: 8rpx;
  overflow: hidden;
}
.commend-img image{
   width: 100%;
   height: 100%;
}
.commend-tit{
  margin:14rpx 0;
  font-size: 28rpx;
  white-space: normal;
  line-height: 40rpx;
  height: 40rpx;
  overflow: hidden
}
.commend-price{
  font-size: 24rpx;
  display: flex;
  align-items: center;
}
.commend-price .price{
  padding-right: 10rpx;
  color: #ff7366;
  font-size:30rpx;
}
.commend-price .roll-price{
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #000
}
.commend-price image{
  margin-left: 10rpx;
  width: 36rpx;
  height: 36rpx;
}
.hot-goods{
  padding: 30rpx 0;
  display: flex
}
.hot-goods .goods-img{
  margin-right: 30rpx;
  flex-shrink: 0;
  width: 40%;
}
.hot-goods .goods-img image{
  width: 100%
}
.hot-goods .goods-info{
  width: 100%;
  text-align: right;
  font-size: 32rpx;
}
.hot-goods .goods-info .date{
  margin-bottom: 20rpx;
}
.hot-goods .goods-info .date text{
  display: inline-block;
  padding: 10rpx 30rpx;
  background: #eee;
  font-size: 30rpx;
  border-radius: 10rpx;
}
.hot-goods .goods-info .name{
  margin-bottom: 20rpx;
  font-size: 32rpx;
}
.hot-goods .goods-info .hot-price{
  display: flex;
  justify-content: flex-end
}
.hot-goods .goods-info .price{
  margin-right: 10rpx;
  color:#ff7366;  
}
.hot-goods .goods-info .hot-price .roll-price{
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #000
}
.hot-goods .goods-info .hot-price image{
  margin-left: 10rpx;
  width: 36rpx;
  height: 36rpx;
}

.voucher{
  position: fixed;
  left: 0;
  top: 0;
  width:100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0,0,0, 0.4);
}
.voucher-con{
  position: relative;
  width: 60%;
  color: #fff;
}
.voucher-con image{
  width: 100%;
}
.voucher-con .con{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  text-align: center;
}
.voucher-con .con .tit{
  padding-top: 40rpx;
  font-size: 28rpx;
}
.voucher-con .con .desc{
  margin-bottom: 10rpx;
  font-size: 24rpx;
}
.voucher-con .con .num{
  padding: 10rpx 0;
  font-size: 60rpx;
}
.voucher-con .con .num text{
  font-size: 80rpx;
}
.voucher-con .con .date{
  font-size: 24rpx;
}
.voucher-con .btn{
  position: absolute;
  left: 10%;
  bottom:0;
  width: 80%;
}
.voucher-con .btn image{
  width: 100%;
}