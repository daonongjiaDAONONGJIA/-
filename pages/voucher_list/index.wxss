/* pages/voucher_list.wxss */
.voucher-list{
  
}
.voucher-item{
  padding: 30rpx;
  display: flex;
  align-items: center;
  background: #fff;
  border-bottom: 1px solid #eee;
}
.voucher-item .voucher-name{
  margin-bottom: 10rpx;
  font-size:30rpx;
}
.voucher-item .voucher-use{
  padding: 8rpx 0;
  color: #666;
  font-size: 28rpx;
}
.voucher-item .voucher-price{
  position: relative;
  flex-shrink: 0;
  width: 40%;
  text-align: center;
  font-size:38rpx;
  margin-right: 30rpx;
}
.voucher-item .voucher-price image{
  width: 100%;
  height: 100%
}
.voucher-item .voucher-price .price{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}
.voucher-none{
  padding: 30rpx;
  text-align: center;
  font-size: 30rpx;
}
.voucher-info{
  width: 100%;
}
.voucher-sel{
  flex-shrink: 0;
  text-align: center;
   width: 60rpx;
}
.voucher-sel image{
  width: 50rpx;
  height: 50rpx;
}