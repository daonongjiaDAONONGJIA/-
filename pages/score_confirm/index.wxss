/* pages/goods_confirm/index.wxss */
page{
  padding-bottom: 120rpx;
}
.consignee{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  border-top:1px solid #eee;
  padding: 30rpx;
  background: #fff;
  font-size: 30rpx;
}
.consignee .c-left{
  margin-right: 20rpx;
  width: 100%;
}
.consignee .info{
  display: flex;
  justify-content: space-between;
  margin-bottom: 14rpx;
}
.consignee .address{
  color: #666
}
.consignee .c-right{
  flex-shrink: 0;
  width: 40rpx;
  height: 40rpx; 
  overflow: hidden
}
.consignee image{
  width: 40rpx;
  height: 40rpx;
}
.goods{
  background: #fff;
}
.goods .info{
  padding: 30rpx;
  display: flex;
  font-size: 30rpx;
}
.goods .info .img{
  margin-right: 30rpx;
  flex-shrink: 0;
  width: 180rpx;
  height: 180rpx;
  overflow: hidden
}
.goods .info .img image{
  width: 180rpx;
  height: 180rpx;
}
.goods .info .con .prop{
  margin:14rpx 0;
  color: #666
}
.goods .info .con .num{
  color: #666
}
.goods .info .con .price{
  margin-top: 14rpx;
  color: #f93a3c;
}
.subtotal{
  padding: 0 30rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-top:1px solid #eee;
  text-align: right;
  font-size: 34rpx;
}
.subtotal text{
   color: #f93a3c;
}
.discount{
  padding: 30rpx;
  margin-top: 20rpx;
  background: #fff;
}
.discount-item{
  margin-bottom: 14rpx;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
}
.discount-item:last-of-type{
  margin-bottom: 0;
}
.discount-item .tit{
  display: flex;
  align-items: center;
  justify-content: center
}
.discount-item .con{
  margin-left: 20rpx;
  flex-shrink: 0;
}
.discount-item image{
  width: 40rpx;
  height: 40rpx;
}

.footer{
  box-sizing: border-box;
  padding-left:30rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  font-size: 30rpx;
}
.footer .price text{
  color: #f93a3c;
}
.footer .buy-btn{
  width: 30%; 
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: #f93a3c;
  color: #fff;
}

