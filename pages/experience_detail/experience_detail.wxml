<!--pages/experience_detail/experience_detail.wxml-->
<import src="../../wxParse/wxParse.wxml"/>
<!-- 幻灯片 -->
<view class='swiper-box'>
    <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" indicator-color="#999" indicator-active-color="#eee"	bindchange="bindchange" style="height:{{imgheights[current]}}rpx;">
      <block wx:for="{{goodsImgs}}" wx:key="{{item.id}}">
        <swiper-item>
          <image src="{{item.thumb}}" class="slide-image" mode='widthFix' bindload="imageLoad" data-id='{{index}}'/>
        </swiper-item>
      </block>
    </swiper>
    <view class='goods-name'>
        {{goodsInfo.goods_name}}
    </view>
    <view class="dots"> 
      <block wx:for="{{goodsImgs}}" wx:key="{{item.id}}"> 
        <view class="dot{{index == current ? ' active' : ''}}"></view> 
      </block> 
    </view>
    <view class='goods-info'>
        <view class='goods-address'>
          <image src='https://m.shanxijsd.com/static/images/address.png'></image>{{goodsInfo.address}}
        </view>
        <view class='goods-length'>
          <image src='https://m.shanxijsd.com/static/images/date.png'></image>{{goodsInfo.length}}
        </view>
    </view>
    <view class='collect' bindtap='goodsCollect'>
      <image src="{{status == -1 ? 'https://m.shanxijsd.com/static/images/collect.png' : 'https://m.shanxijsd.com/static/images/collected.png'}}"></image>
    </view>
</view>
<!-- 幻灯片结束 -->
<view class='experience-intro'>
  <view class='intro-item' wx:for="{{goodsAtricle}}" wx:key="item.id">
    <view class='intro-tit' bindtap='showIntro' data-id="{{index}}"><view>~{{item.title}}~</view><view class='intro-more'>查看更多</view></view>
    <view class='intro-con pd-tb-20 {{selected==index?"intro-show":"intro-hidden"}}'>
      <template is="wxParse" data="{{wxParseData:htmlAry[index].nodes}}" />
    </view>
  </view>
   <view class='intro-item'>
    <view class='intro-tit'>
      <view>~体验者说~</view><view class='intro-more' bindtap='comments'>查看更多></view>
    </view>
    <view class='intro-con'>
      <view class='comment-list'>
        <view class='comment-item' wx:for="{{goodsComment}}" wx:key="item.id">
          <view class='comment-avatar'>
            <image src='{{item.head_src}}'></image>
          </view>
          <view class='comment-info'>
            <view class='comment-user'>
            {{item.nick_name}}
            </view>
            <view class='comment-desc'>
            {{item.content}}
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class='intro-item'>
    <view class='intro-tit'>
      <view>~其他推荐~</view><view class='intro-more'>查看更多></view>
    </view>
    <view class='intro-con'>
      <scroll-view class='recomment-list' scroll-x>
         <view class='recomment-item'>
          <image src='https://m.shanxijsd.com/static/images/3.png'>
          </image>
          <view class='recomment-tit'>
          在西安与朋友
          </view>
         </view>
         <view class='recomment-item'>
          <image src='https://m.shanxijsd.com/static/images/3.png'>
          </image>
          <view class='recomment-tit'>
           在西安与朋友
          </view>
         </view>
         <view class='recomment-item'>
           <image src='https://m.shanxijsd.com/static/images/3.png'>
           </image>
           <view class='recomment-tit'>
           在西安与朋友
           </view>
         </view>
      </scroll-view>
    </view>
  </view>
</view>
<view class='footer'>
  <view class='price-star'>
    <view class='price'>
    ￥{{goodsInfo.shop_price}}/每人
    </view>
