      <image src='https://m.shanxijsd.com/static/images/xingxing.png'></image>
      <image src='https://m.shanxijsd.com/static/images/xingxing.png'></image>
      <image src='https://m.shanxijsd.com/static/images/xingxing.png'></image>
      <image src='https://m.shanxijsd.com/static/images/xingxing.png'></image>
    </view> -->
  </view>
  <view class='view-date'>
   <button size="default" type="warn" class="" bindtap='viewDate'>查看日期</button>
  </view>
</view>
