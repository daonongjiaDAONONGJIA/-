.swiper-box{
  position: relative;
  width: 100%;
}
.slide-image{
  width: 100%;
  height: auto;
}
.tui-title{
  font-size: 15px;
}
swiper-item{
  position: relativeï¼›
}
.goods-name{
  padding: 0 50rpx;
  position: absolute;
  bottom: 180rpx;
  left: 0;
  width:100%;
  color: #fff;
  font-weight: bolder;
  box-sizing: border-box;
  font-size: 36rpx;
}
.goods-info{
  padding: 0 50rpx;
  position: absolute;
  bottom: 20rpx;
  left: 0;
  color: #fff;
  font-size: 30rpx;
}
.goods-address,.goods-length{
  display: flex;
  height: 50rpx;
  line-height: 50rpx;
}
.goods-address image,.goods-length image{
  margin-right: 30rpx;
  width: 50rpx;
  height: 50rpx;
}
.collect{
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  top: 50rpx;
  right: 50rpx;
  background: rgba(0,0,0,0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.collect image{
  width: 42rpx;
  height: 40rpx
}
.dots{ 
  position: absolute; 
  left: 0; 
  right: 0; 
  bottom: 150rpx; 
  width: 100%;
  padding: 0 50rpx;
  box-sizing: border-box;
  display: flex; 
  justify-content: center; 
} 
.dots .dot{ 
  width: 10%;
  margin: 0 8rpx;  
  height: 4rpx; 
  background:rgba(255, 255, 255, 0.6); 
  border-radius: 4rpx; 
  transition: all .6s; 
} 
.dots .dot.active{ 
  background:rgba(255, 255, 255, 1);
}
.experience-intro .intro-item:last-of-type{
  margin-bottom:160rpx;
}
.intro-item{
  margin-bottom:30rpx;
  padding: 0 30rpx;
  background: #fff;
}
.intro-show{
  display: block
}
.intro-hidden{
  display: none
}
.intro-tit{
  display: flex;
  justify-content: space-between;
  height: 90rpx;
  line-height: 90rpx;
  font-size:30rpx;
  border-bottom:1px solid #f7f7f7
}
.intro-more{
  color: #999999;
  font-size: 28rpx;
}
.intro-con{
  transition: all 0.3s;
  font-size:28rpx;
  color: #666;
}
.recomment-list {
  width: 100%;
  white-space: nowrap;
}
.recomment-item{
  margin-right:30rpx;
  width: 415rpx;
  height: 280rpx;
  display: inline-block;
}
.recomment-item image{
  width: 415rpx;
  height: 200rpx;
}
.recomment-tit{
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}
.comment-item{
  padding: 20rpx 0;
  display: flex;
}
.comment-avatar{
  flex-shrink: 0;
  width: 80rpx;
  height: 80rpx;
  margin-right: 30rpx;
  border-radius: 50%;
  overflow: hidden;
  background: #ccc
}
.comment-avatar image{
  width: 66rpx;
  height: 66rpx;
}
.comment-info{
  width: 100%;
}
.comment-user{
  padding-bottom: 10rpx;
  font-size: 36rpx;
  color: #1a1a1a
}
.comment-desc{
  padding-bottom: 30rpx;
  font-size: 28rpx;
  border-bottom:1px solid #f7f7f7;
  color: #4e4e4e
}
.cost-item{
  padding: 20rpx 0;
}
.cost-tit{
  padding-bottom:20rpx;
  text-align: center;
  color: #80bdcf
}



.footer{
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  position: fixed;
  bottom:0;
  left: 0;
  width: 100%;
  background: #fff;
  border-top:1px solid #f7f7f7;
  box-sizing: border-box
}
.star image{
  width: 60rpx;
  height: 40rpx;
}
.price{
  color: #f93a3c;
  padding-bottom: 20rpx;
}